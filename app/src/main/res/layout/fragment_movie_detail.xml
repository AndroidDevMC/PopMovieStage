<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.udacityu.android.popmoviestage.MovieDetailActivityFragment"
    android:orientation="vertical"
    android:weightSum="1">
    <ImageView
        android:id="@+id/posterDetail"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:padding="@dimen/image_padding_detail"
        android:layout_weight=".7"/>

    <TextView
        android:id="@+id/titleDetail"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_weight=".05"
        android:textSize="@dimen/title_font_size_detail"/>
    <TextView android:text=""
        android:id="@+id/relDateDetail"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_weight=".05"/>
    <TextView
        android:id="@+id/voteAvgDetail"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_weight=".05"/>
    <TextView
        android:id="@+id/synopDetail"
        android:padding="10dp"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_weight=".15"/>

</LinearLayout>
